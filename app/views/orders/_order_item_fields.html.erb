<div class="nested-fields form-inline">
  <div class="form-group">
    <%= f.label :product_id, class: "sr-only" %>
    <%= text_field_tag :product_name, nil, class: "form-control", placeholder: 'Product' %>
    <%= f.hidden_field :product_id, class: "form-control", placeholder: "Product"%>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: "sr-only" %>
    <%= f.text_field :quantity, class: "form-control", placeholder: "Quantity"%>
  </div>
  <%= link_to_remove_association "Remove Item", f %>
</div>
