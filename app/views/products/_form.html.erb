<%= form_for(product, html: {class: "form-horizontal"} )do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="form-group">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.number_field :price, class: "form-control", value: number_to_currency(f.object.price.to_f, delimiter:'', unit: ''), step: 0.01 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :weight, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.number_field :weight, class: "form-control", value: number_to_currency(f.object.weight.to_f, delimiter:'', unit: ''), step: 0.01 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :descirption, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create Product", class: "btn btn-default" %>
      <%= link_to 'Back', products_path, class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
