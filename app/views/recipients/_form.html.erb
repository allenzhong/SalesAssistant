<%= form_for(recipient, html: {class: "form-horizontal"} )do |f| %>
  <% if recipient.errors.any? %>
    <div id="error_explanation" class="form-group">
      <h2><%= pluralize(recipient.errors.count, "error") %> prohibited this recipient from being saved:</h2>
      <ul>
        <% recipient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.number_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :identity_number, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.number_field :identity_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :memo, class: "col-sm-2 col-md-2 control-label" %>
    <div class="col-sm-10 col-md-10">
      <%= f.text_area :memo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Back', recipients_path, class: "btn btn-primary"%>
      <%= f.submit "Save Recipient", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
